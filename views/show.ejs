<% include include/header %>

<div class="row">

	<div class="col-md-3">
		<div class="list-group">
			<p class="lead">YelpCamp</p>

			<div class="list-group-item active">Info 1</div>
			<div class="list-group-item">Info 2</div>
			<div class="list-group-item">Info 3</div>
		</div>
	</div>

	<div class="col-md-9">
		<div class="ui segment">

			<h3 class="text-center"><strong><%= campground.name %></strong></h3>

			<hr>

			<div class="text-center">
				<img src="<%= campground.image %>">
			</div>
			
			<h4 class="text-center"><strong>â‚¬9.00/night</strong></h4>

			<hr>	
			<div class="camp-desc">
				<p><%- campground.description %></p>
			</div>

		</div>

		<h3 class="mb-4">Comments:</h3>
		<hr>

		<div class="ui massive comments">

			<% campground.comments.forEach(function(comment) { %>
			    <div class="comment">
				    <a class="avatar">
				      <img src="/images/no-user.png">
				    </a>

			    	<div class="content">
			      		<a class="author"><%= comment.author %></a>

				      	<div class="metadata">
				        	<span class="date">Today at 5:42PM</span>
				      	</div>

			      		<div class="text"><%= comment.text %></div>

			      		<div class="actions">
			        		<a class="reply">Reply</a>
			      		</div>
			    	</div>
			  	</div> 
		  	<% }); %>
		  
		  	<div class="form-box">
				<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				    <div class="form-group">

				      	<textarea class="form-control" name="comment[text]" rows="4"></textarea>
					</div>
						<!-- Hardcoded author for now -->
				      	<input type="hidden" name="comment[author]" value="Jack">
				    

				    <button class="btn btn-primary" type="submit">
				    	<i class="icon edit"></i> Add Reply
				    </button>
			  	</form>
			</div>

		</div>
	</div>

<!-- END row-->
</div>
	


<% include include/footer %>